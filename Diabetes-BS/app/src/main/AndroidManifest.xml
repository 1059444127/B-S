<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.czk.diabetes">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.SET_TIME_ZONE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/main_activity_style">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".setting.SettingActvity" />

        <activity android:name=".setting.LanguageSettingActivity" />

        <activity android:name=".signin.SignActivity" />

        <activity android:name=".AddValueActivity" />

        <activity android:name=".BrowserActivity" />

        <activity android:name=".medicine.SearchMedicineActivity" />

        <activity android:name=".medicine.MedicineInfoActivity" />

        <activity android:name=".notification.AddNotificationActivity" />

        <receiver
            android:name=".notification.AlarmReceiver"
            android:process="com.czk.diabetes.notification" />
    </application>

</manifest>