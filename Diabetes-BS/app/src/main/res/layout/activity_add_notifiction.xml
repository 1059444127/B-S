<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_light">
    <!--头部-->
    <include layout="@layout/layout_title" />

    <!--主体-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shadow_white_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:stretchColumns="2">

                <TableRow
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="@string/date" />

                    <LinearLayout
                        android:id="@+id/date_chose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_date_chose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:minEms="5"
                            android:padding="6dp"
                            android:singleLine="true"
                            android:text="@string/every_day"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/date_triangle_down"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="6dp" />
                    </LinearLayout>


                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:id="@+id/date_chosed"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/shadow_white_oval"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="@string/mon"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/shadow_white_oval"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="@string/tue"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/shadow_white_oval"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="@string/wed"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/shadow_white_oval"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="@string/tur"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/shadow_white_oval"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="@string/fri"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/shadow_white_oval"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="@string/sat"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/shadow_white_oval"
                            android:gravity="center"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="@string/sun"
                            android:textSize="12dp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="@string/time" />

                    <LinearLayout
                        android:id="@+id/time_chose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_time_chose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:minEms="5"
                            android:padding="6dp"
                            android:singleLine="true"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/time_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="4dp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="@string/event" />

                    <EditText
                        android:id="@+id/et_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:background="@drawable/edittext_background"
                        android:inputType="textCapWords"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="@string/describe" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:background="@drawable/edittext_background"
                        android:gravity="left|top"
                        android:inputType="textMultiLine"
                        android:minLines="6"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/next"
            android:textColor="@color/txt_white"
            android:textSize="16sp"></TextView>


    </LinearLayout>


</RelativeLayout>
