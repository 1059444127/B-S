<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_white_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_white_light"
            android:orientation="vertical">
            <!--登录卡片-->
            <LinearLayout
                android:id="@+id/sign_card"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/card_circular_bead"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <RelativeLayout
                    android:id="@+id/user_icon_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/circular_theme"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_logged_in"
                        android:textColor="@color/txt_black"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_sig_chevron_right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="2dp" />
            </LinearLayout>
            <!--每日一读-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/card_circular_bead"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cozy_tip_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/tip_pink_circular_bc"
                        android:padding="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温馨提示：保持良好的生活习惯，坚持运动，是预防糖尿病的有效手段。"
                        android:textColor="@color/txt_light_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/divide_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/read_tip_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/tip_green_circular_bc"
                        android:padding="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每日一读：经济水平决定糖尿病的发病率。"
                        android:textColor="@color/txt_light_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <!--输入血糖-->
            <LinearLayout
                android:id="@+id/blood_sugar_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/card_circular_bead"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">
                <!--标题-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/blood_tip_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/tip_purple_circular_bc"
                        android:padding="6dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/blood_sugar"
                        android:textColor="@color/txt_light_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/img_blood_chevron_right"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingRight="4dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.czk.diabetes.view.CircleProgressBar xmlns:cpb="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/circular_one"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                cpb:max_value="25"
                                cpb:progress_background_color="@color/background_white_light"
                                cpb:progress_color="@color/safe_color"
                                cpb:progress_width="8dp"
                                cpb:start_angle="270"
                                cpb:value="0" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/circular_one_icon"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp" />

                                <TextView
                                    android:id="@+id/circular_one_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textColor="@color/background_white_light"
                                    android:textSize="24dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="mmol/L"
                                    android:textColor="@color/txt_light_color"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/circular_one_tile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="@string/before_sleep"
                            android:textColor="@color/txt_light_color"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingLeft="4dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.czk.diabetes.view.CircleProgressBar xmlns:cpb="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/circular_tow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                cpb:max_value="25"
                                cpb:progress_background_color="@color/background_white_light"
                                cpb:progress_color="@color/safe_color"
                                cpb:progress_width="8dp"
                                cpb:start_angle="270"
                                cpb:value="0" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/circular_tow_icon"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp" />

                                <TextView
                                    android:id="@+id/circular_tow_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textColor="@color/background_white_light"
                                    android:textSize="24dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="mmol/L"
                                    android:textColor="@color/txt_light_color"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/circular_tow_tile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="@string/before_dawn"
                            android:textColor="@color/txt_light_color"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>