<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_light">
    <!-- The main content view -->
    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--头部-->
        <include layout="@layout/layout_title" />

        <!--主体-->
        <android.support.v4.view.ViewPager
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_viewpager"
            android:layout_marginBottom="56dp"/>

        <View
            android:id="@+id/shadow_layout"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/item_shadow" />

        <!--底部-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/page1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/item_background_click"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_bottom1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/page2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/item_background_click"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_bottom2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/page3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/item_background_click"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_bottom3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/page4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/item_background_click"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_bottom4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/transparent" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/shadow_up_layout"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="56dp"
            android:background="@drawable/item_shadow_up" />
    </RelativeLayout>

    <!-- 侧边栏 -->
    <LinearLayout
        android:id="@+id/drawer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background_white"
        android:choiceMode="multipleChoice"
        android:divider="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/icon" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/txt_black"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/divide_line" />

        <LinearLayout
            android:id="@+id/settiong_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/item_background_click"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settiong_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="@string/setting"
                android:textColor="@color/txt_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/item_background_click"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/about_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="@string/about"
                android:textColor="@color/txt_black" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
